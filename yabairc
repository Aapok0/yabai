# WINDOW CONFIGURATIONS
# Layout (options: bsp, stack and float)
yabai -m config layout bsp

# New window opens to the right, if screen is split vertically, or to the bottom, if split horizontally.
yabai -m config window_placement second_child

# Padding around window set to 6px
yabai -m config top_padding 4
yabai -m config bottom_padding 4
yabai -m config left_padding 4
yabai -m config right_padding 4
yabai -m config window_gap 4

# MOUSE CONFIGURATIONS
# Center mouse on window with focus.
yabai -m config mouse_follows_focus on
# Modifier for clicking and dragging with mouse.
yabai -m config mouse_modifier alt
# Modifier + left-click to drag window.
yabai -m config mouse_action1 move
# Modifier + right-click to resize window.
yabai -m config mouse_action2 resize
# When window is dropped in center of another window, swap them (on edges it will split it).
yabai -m mouse_drop_action swap

# APPS NOT TO MANAGE
# Add as needed.
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Keeper Password Manager$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Slack$" manage=off
yabai -m rule --add app="^Microsoft Teams classic$" manage=off
